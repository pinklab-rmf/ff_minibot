<?xml version='1.0' ?>
<launch>
  <arg name="map_file" default="$(find-pkg-share ff_minibot)/maps/pinklab_3.yaml"/>
  <arg name="param_dir" default="$(find-pkg-share ff_minibot)/params"/>

  <!-- launch the navigation -->
  <include file="$(find-pkg-share minibot_navigation2)/launch/bringup_launch.py">
    <arg name="map" value="$(var map_file)"/>
    <arg name="params_file" value="$(var param_dir)/nav2_params.yaml"/>
  </include>

  <!-- launch rviz2 -->
  <node pkg="ff_minibot" exec="run_rviz.py" name="run_rviz" output="screen"/>

  <!-- launch the free fleet client first -->
  <node name="minibot_free_fleet_client_node" pkg="free_fleet_client_ros2"
      exec="free_fleet_client_ros2" output="both">
    <param name="fleet_name" value="minibot"/>
    <param name="robot_name" value="minibot_2"/>
    <param name="robot_model" value="minibot"/>
    <param name="level_name" value="L1"/>
    <param name="dds_domain" value="43"/>
    <param name="max_dist_to_first_waypoint" value="10.0"/>
    <param name="map_frame" value="map"/>
    <param name="robot_frame" value="base_footprint"/>
    <param name="nav2_server_name" value="/navigate_to_pose"/>
    <param name="use_sim_time" value="False"/>
    <param name="dds_domain" value="43"/>
  </node>
</launch>
